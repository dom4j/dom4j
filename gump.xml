<module name="dom4j">


  <description>dom4j : XML framework for Java</description>
  <url href="http://dom4j.org"/>
  
  <cvs repository="jakarta"/>
  
  <!-- This is really the cvs module. We need to change this but -->
  <!-- I will leave this for now until everything works.         -->
  
  <project name="dom4j">
    
    <!-- Standard Maven target to produce Javadocs, source -->
    <!-- and binary distributions.                         -->
    <ant buildfile="build-gump.xml" target="jar">
      <property name="maven.final.name" value="dom4j-@@DATE@@"/>
    </ant>

    <package>org.dom4j</package>

    <!-- All Maven projects need Ant and Xerces to build. -->
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>

    <depend project="jaxen"/>
    <depend project="saxpath"/>
    <depend project="msv"/>
    <depend project="xsdlib"/>
    <depend project="relaxngDatatype"/>
    <depend project="isorelax"/>
    <depend project="PullParser"/>
    <depend project="Tidy"/>

    <work nested="target/classes"/>
    <home nested="target"/>
    <jar name="dom4j-@@DATE@@.jar"/>
    <javadoc nested="docs/apidocs"/>

    <nag from="Maven Developers &lt;turbine-maven-dev@jakarta.apache.org&gt;"
         to="dom4j-dev@lists.sourceforge.net"/>

    
  </project>
  
</module>
